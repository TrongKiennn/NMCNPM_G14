    <form form-search action="/admin/products/search" method="GET" class="relative flex items-center w-[400px] mx-4">
        <input type="text" name="keyword" id="searchInput" placeholder="Tìm kiếm món ăn..." class="w-full h-[50px] pl-12 pr-4 
                text-[18px] 
                text-gray-800 
                bg-white/90 
                border-2 border-[#D9BB1C] 
                rounded-[20px] 
                focus:outline-none 
                focus:border-[#D1B31B] 
                focus:ring-2 
                focus:ring-[#D1B31B]/50 
                focus:bg-white
                hover:bg-white
                transition-all duration-200
                placeholder:text-gray-500
                placeholder:font-light">
        <button type="submit" class="absolute left-4 
            text-[#D9BB1C] 
            hover:text-[#D1B31B] 
            transition-colors 
            duration-200 
            focus:outline-none">
            <i class="fa-solid fa-magnifying-glass text-xl"></i>
        </button>
    </form>

    <div id="notification">
        <button class="noti-btn bg-transparent border-0 text-white text-[25px] ml-[100px] cursor-pointer">
            <i class="fa-solid fa-bell"></i>
        </button>
    </div>

    <div id="account" class="ml-[50px] flex">
        <div
            class="avatar w-[40px] h-[40px] mt-[4px] text-[25px] px-[9px] py-[1px] border-[1px] border-solid rounded-full">
