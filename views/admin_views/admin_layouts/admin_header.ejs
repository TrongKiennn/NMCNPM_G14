            <i class="fa-solid fa-magnifying-glass"></i>  
        </button>
      </div>

    <div id="notification">
        <button class="noti-btn bg-transparent border-0 text-white text-[25px] ml-[100px] cursor-pointer">
            <i class="fa-solid fa-bell"></i>
        </button>
    </div>

    <div id="account" class="ml-[50px] flex">
        <div class="avatar w-[40px] h-[40px] mt-[4px] text-[25px] px-[9px] py-[1px] border-[1px] border-solid rounded-full">
            <i class="fa-solid fa-user"></i>
        </div>

        <div class="name-role ml-[7px]">
            <div class="name text-[17px] font-lalezar capitalize">
                Nguyễn Mỹ
            </div>

            <div class="role text-[17px] font-roboto-condensed capitalize">
                Admin
            </div>
        </div>
